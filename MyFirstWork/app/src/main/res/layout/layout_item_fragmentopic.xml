<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@mipmap/ic_launcher"
              android:id="@+id/rl_fragment_topic_item"
              android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fragment_topic_title"
            android:text="美食"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorToipicText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fragment_topic_description"
            android:text="美食天下"
            android:textSize="18sp"
            android:layout_below="@+id/tv_fragment_topic_title"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fragment_topic_num"
            android:text="966人参加"
            android:textSize="16sp"
            android:layout_below="@id/tv_fragment_topic_description"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_canjia"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参加"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_canjia"
            android:textColor="@color/colorBlue"
            android:elevation="5dp"
            />
        <com.jaeger.ninegridimageview.NineGridImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:imgGap="4dp"
            app:showStyle="grid"
            app:singleImgSize="120dp"
            android:id="@+id/NineImageView"
            android:layout_below="@+id/tv_fragment_topic_num"
            >

        </com.jaeger.ninegridimageview.NineGridImageView>
    </RelativeLayout>

</RelativeLayout>
