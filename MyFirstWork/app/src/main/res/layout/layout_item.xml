<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ngl="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    android:background="@color/colorBackgroundAccent"
    android:paddingTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="10dp"
    >
        <RelativeLayout
            android:id="@+id/rl"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <com.kizi.myfirstwork.CustomView.CircleImageView
                android:id="@+id/iv_cus"
                android:layout_width="60dp"
                android:src="@mipmap/tou"
                android:layout_marginRight="10dp"
                android:layout_height="60dp"/>
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行走的猫"
                android:paddingTop="10dp"
                android:layout_toRightOf="@id/iv_cus"
                android:textSize="16sp"
                android:id="@+id/tv_cus1"
                android:textColor="@color/colorCustomsName"
                />
            <TextView
                android:id="@+id/tv_cus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-05-06"
                android:textSize="13sp"
                android:textColor="@color/colorGrey"
                android:layout_toRightOf="@id/iv_cus"
                android:layout_below="@id/tv_cus1"
                android:paddingTop="10dp"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/iv_location"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/location"
                android:layout_toLeftOf="@+id/tv_cus3"
                android:layout_alignBottom="@+id/tv_cus3"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cus3"
                android:text="湖北 武汉"
                android:textSize="14sp"
                android:textColor="@color/colorGrey"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_cus2"
                android:paddingRight="5dp"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:padding="7dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlue"
                android:background="@drawable/shape_getauthcode"
                />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_image_or_video"
        android:layout_below="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.jaeger.ninegridimageview.NineGridImageView
        android:visibility="gone"
        android:id="@+id/ngl_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        ngl:imgGap="3dp"
        ngl:showStyle="fill"
        ngl:singleImgSize="160dp"
        >
    </com.jaeger.ninegridimageview.NineGridImageView>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海边的记忆"
        android:layout_below="@id/rl_image_or_video"
        android:padding="5dp"
        android:textColor="@color/colorCustomsName"
        android:textSize="15sp"
        />
        <TextView
            android:id="@+id/tv_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="海边的记忆 夕阳西下"
            android:textColor="@color/colorGrey"
            android:layout_below="@+id/tv_content"
            />
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:id="@+id/iv_love"
            android:padding="1dp"
            android:src="@mipmap/love"
            android:layout_below="@id/tv_lab"
            android:layout_marginLeft="5dp"
            />
    <TextView
        android:id="@+id/tv_num_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@+id/iv_love"
        android:layout_alignBottom="@+id/iv_love"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorGrey"
        android:layout_marginRight="8dp"
        />
    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@mipmap/info"
        android:layout_below="@id/tv_lab"
        android:layout_toRightOf="@+id/tv_num_love"
        />
    <TextView
        android:id="@+id/tv_num_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@+id/iv_info"
        android:layout_alignBottom="@+id/iv_love"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:textColor="@color/colorGrey"
        android:layout_marginRight="8dp"
        />
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@mipmap/share"
        android:layout_below="@id/tv_lab"
        android:layout_toRightOf="@+id/tv_num_info"
        />
</RelativeLayout>