<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kizi.myfirstwork.Activity.ImagesActivity">
    <com.yyydjk.library.BannerLayout
        android:id="@+id/banner_imageActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlayDuration="3000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:scrollDuration="900"
        app:defaultImage="@mipmap/ic_launcher"
        app:selectedIndicatorColor="?attr/colorAccent"
        app:selectedIndicatorHeight="5dp"
        app:selectedIndicatorWidth="5dp"
        app:unSelectedIndicatorColor="#99ffffff"
        app:unSelectedIndicatorHeight="5dp"
        app:unSelectedIndicatorWidth="5dp"
        >

    </com.yyydjk.library.BannerLayout>
</RelativeLayout>
