<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    android:background="@color/colorBackgroundAccent"
    tools:context="com.kizi.myfirstwork.Activity.ForgetPasswordActivity">
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:id="@+id/rl_forget_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/et_forget_number"
        android:background="@color/colorBackgroundAccent"
        android:textColorHint="@color/colorGrey"
        android:hint="请输入手机号"
        android:paddingLeft="5dp"
        android:inputType="number"
        android:maxLength="11"

        />
        <TextView
            android:id="@+id/tv_getAuthCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_alignBaseline="@+id/et_forget_number"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBlue"
            android:background="@drawable/shape_getauthcode"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line_forget1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/rl_forget_number"
        android:layout_marginBottom="5dp"
        />
    <RelativeLayout
        android:layout_below="@+id/line_forget1"
        android:id="@+id/rl_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/et_forget_password"
            android:background="@color/colorBackgroundAccent"
            android:textColorHint="@color/colorGrey"
            android:hint="请输入验证码"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line_forget2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/rl_forget_password"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/line_forget2"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorBackgroundAccent"
        android:background="@drawable/shape_next"
        />
</RelativeLayout>
